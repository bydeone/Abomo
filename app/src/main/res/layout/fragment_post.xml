<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/pageBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PostFrag">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/pageBackground">

        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/pageBackground">

            <ImageView
                android:id="@+id/ivCover"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:contentDescription="@string/post_cover"
                android:scaleType="centerCrop"
                android:src="@drawable/lion" />

            <LinearLayout
                android:id="@+id/llActions"
                android:layout_below="@+id/ivCover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/showBackground"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tvGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="16"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_action_image" />

                <TextView
                    android:id="@+id/tvWork"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_action_travaux" />

                <TextView
                    android:id="@+id/tvJaime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="13"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_action_unjaime" />

                <TextView
                    android:id="@+id/tvFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="44"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_action_unfavorite" />

                <TextView
                    android:id="@+id/tvPartage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="13"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_action_unpartage" />

                <TextView
                    android:id="@+id/tvSignalement"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="13"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_action_unsignaler" />

                <TextView
                    android:id="@+id/tvComments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="542"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_action_uncomment" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvPost"
                style="@style/tv_settings_trois"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llActions"
                android:text="@string/description_immeuble"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swNotifComment"
                style="@style/sw_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPost"
                android:text="@string/notif_comment" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swShowGallery"
                style="@style/sw_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/swNotifComment"
                android:text="@string/show_gallery" />

            <TextView
                android:id="@+id/tvNotes"
                style="@style/tv_settings_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/swShowGallery"
                android:text="@string/noter_post"
                app:drawableEndCompat="@drawable/ic_action_note" />

            <TextView
                android:id="@+id/tvComparaison"
                style="@style/tv_settings_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNotes"
                android:text="@string/comparer"
                app:drawableEndCompat="@drawable/ic_action_notification" />

            <TextView
                android:id="@+id/tvEstimation"
                style="@style/tv_settings_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvComparaison"
                android:text="@string/estimer"
                app:drawableEndCompat="@drawable/ic_action_notification" />

            <TextView
                android:id="@+id/tvTravaux"
                style="@style/tv_settings_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEstimation"
                android:text="@string/travaux_amenagements"
                app:drawableEndCompat="@drawable/ic_action_travaux" />

            <TextView
                android:id="@+id/tvLocataire"
                style="@style/tv_settings_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTravaux"
                android:text="@string/locataire"
                app:drawableEndCompat="@drawable/ic_action_person" />

            <TextView
                android:id="@+id/tvSignaler"
                style="@style/tv_settings_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLocataire"
                android:text="@string/signaler_this_post"
                app:drawableEndCompat="@drawable/ic_action_signaler" />

            <TextView
                android:id="@+id/tvSupprimer"
                style="@style/tv_settings_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSignaler"
                android:text="@string/delete_this_post"
                app:drawableEndCompat="@drawable/ic_action_supprimer" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>