<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/pageBackground"
    tools:context=".SignUpActivity">

    <View
        android:id="@+id/viHead"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="?attr/edtvComment" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivAvatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/lion" />

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/viHead"
        android:layout_toEndOf="@+id/ivAvatar"
        android:text="Votre compte"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@+id/tvHead"
        android:textSize="11sp"
        android:text="CrÃ©ation de votre compte utilisateur"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/ivAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/llFields"
        android:layout_below="@+id/ivAvatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvSignature"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtvNons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/redtv"
            android:drawableEnd="@drawable/ic_action_person"
            android:hint="@string/nom_complet"
            android:inputType="text"
            android:padding="20sp" />

        <EditText
            android:id="@+id/edtvTelephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/redtv"
            android:drawableEnd="@drawable/ic_action_phone"
            android:hint="@string/t_l_phone"
            android:inputType="phone"
            android:padding="20sp" />

        <EditText
            android:id="@+id/edtvVille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/redtv"
            android:drawableEnd="@drawable/ic_action_ville"
            android:hint="@string/ville"
            android:inputType="phone"
            android:padding="20sp" />

        <EditText
            android:id="@+id/edtvUtilisateur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/redtv"
            android:drawableEnd="@drawable/ic_action_login"
            android:hint="@string/utilisateur"
            android:inputType="text"
            android:padding="20sp" />

        <EditText
            android:id="@+id/edtvMotdepasse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/redtv"
            android:drawableEnd="@drawable/ic_action_lock"
            android:hint="@string/mot_de_passe"
            android:inputType="textPassword"
            android:padding="20sp" />

        <EditText
            android:id="@+id/edtvConfmotdepasse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/redtv"
            android:drawableEnd="@drawable/ic_action_lock"
            android:hint="@string/conf_mot_de_passe"
            android:inputType="textPassword"
            android:padding="20sp" />

        <Button
            android:id="@+id/btSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:enabled="false"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textAllCaps="false"
            android:text="@string/creer"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvSignature"
        android:text="@string/deone_studio"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>