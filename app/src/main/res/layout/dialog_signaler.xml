<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="5dp"
        android:text="Titre de la boite de dialogue"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_below="@+id/tvTitre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Message de la boite de dialogue"
        android:textColor="@color/black" />

    <CheckBox
        android:id="@+id/cbSignale"
        android:layout_below="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message de la boite de dialogue"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btSignaler"
        android:layout_below="@+id/cbSignale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="SIGNALER"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btAnnuler"
        android:layout_below="@+id/cbSignale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/btSignaler"
        android:layout_marginEnd="10dp"
        android:text="ANNULER"
        android:textColor="@color/black" />

</RelativeLayout>