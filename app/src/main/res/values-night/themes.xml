<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Abomo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/field_back_nuit</item>
        <item name="android:colorPrimaryDark">@color/field_back_nuit</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/field_back_nuit</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="pageBackground">@color/app_back_nuit</item>
        <item name="fieldBackground">@color/field_back_nuit</item>
        <item name="fieldBorderBackground">@color/field_border_nuit</item>
        <item name="tvBackground">@color/field_back_nuit</item>
        <item name="itemBackground">@color/item_field_back_nuit</item>
        <item name="showBackground">@color/item_description_background_nuit</item>
    </style>
    <style name="tv_settings_one">
        <item name="android:background">?attr/itemBackground</item>
        <item name="android:padding">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>
    <style name="tv_settings_two">
        <item name="android:background">?attr/itemBackground</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/rouge_nuit</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>
    <style name="sw_settings">
        <item name="android:background">?attr/itemBackground</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>
</resources>